<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_friendLayout_moneyOwed"
        android:layout_width="162dp"
        android:layout_height="42dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView_friendLayout_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MoneyOwed" />

    <TextView
        android:id="@+id/textView_friendLayout_clumsiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="110dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_friendLayout_moneyOwed"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_friendLayout_name"
        tools:text="Clusminess" />

    <TextView
        android:id="@+id/textView_friendLayout_name"
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <Button
        android:id="@+id/button_friendLayout_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="17dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_friendLayout_clumsiness"
        app:layout_constraintTop_toBottomOf="@+id/textView_friendLayout_moneyOwed" />
</androidx.constraintlayout.widget.ConstraintLayout>